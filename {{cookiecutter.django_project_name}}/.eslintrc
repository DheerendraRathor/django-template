{
  "env": {
    "browser": true,
    "jquery": true
  },

  "rules": {

    //Possible Errors
    "no-extra-semi": 1,            // disallow unnecessary semicolons
    "no-inner-declarations": 2,    // disallow function or variable declarations in nested blocks

    // Best Practices
    "curly": 1,                 // specify curly brace conventions for all control statements
    "no-eval": 2,               // disallow use of eval()
    "no-extend-native": 2,      // disallow adding to native types
    "no-new-wrappers": 2,       // disallows creating new instances of String, Number, and Boolean
    "no-with": 2,               // disallow use of the with statement

    // Variables
    "no-undef": 1,                   // disallow use of undeclared variables unless mentioned in a /*global */ block

    // Stylistic Issues
    "array-bracket-spacing": [1, "never"], // enforce spacing inside array brackets (off by default)
    "indent": [1, 4],                      // this option sets a specific tab width for your code (off by default)
    "no-array-constructor": 2,             // disallow use of the Array constructor
    "no-mixed-spaces-and-tabs": 2,         // disallow mixed spaces and tabs for indentation
    "no-new-object": 2,                    // disallow use of the Object constructor
    "object-curly-spacing": [1, "never"],  // require or disallow padding inside curly braces (off by default)
    "semi": 1,                             // require or disallow use of semicolons instead of ASI

    // Legacy
    "max-len": [1, 120, 4], // specify the maximum length of a line in your program (off by default)
  }
}
